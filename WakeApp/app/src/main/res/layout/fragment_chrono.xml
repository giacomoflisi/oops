<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.chrono.ChronoFragment" android:backgroundTintMode="screen">

    <ImageView
            android:layout_width="322dp"
            android:layout_height="430dp"
            android:src="@drawable/step_screen" android:id="@+id/step_screen"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.492"
            android:layout_marginBottom="112dp" android:foregroundGravity="center_horizontal"/>
    <ImageButton
            android:src="@drawable/step_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/step_chrono_button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.102"
            android:layout_marginBottom="84dp"
            android:background="@null" android:hapticFeedbackEnabled="true" tools:ignore="SpeakableTextPresentCheck"
            android:visibility="invisible"/>
    <ImageButton
            android:src="@drawable/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/start_chrono_button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.895" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="84dp"
            android:background="@null" android:hapticFeedbackEnabled="true" tools:ignore="SpeakableTextPresentCheck"/>
    <ImageView
            android:layout_width="203dp"
            android:layout_height="60dp"
            android:src="@drawable/chrono_screen" android:id="@+id/chrono_screen"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:foregroundGravity="center_horizontal" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"/>
    <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chronometer"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:textColor="#1aff00"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/bai_jamjuree_semibold" android:textSize="25sp"
            android:gravity="center_horizontal" app:layout_constraintTop_toTopOf="parent"
    />
    <ImageButton
            android:src="@drawable/pause_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/pause_chrono_button"
            android:background="@null" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.895" android:layout_marginBottom="84dp"
            android:visibility="invisible"/>
    <ImageButton
            android:src="@drawable/restart_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/restart_chrono_button"
            android:background="@null" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginBottom="84dp"
            tools:ignore="SpeakableTextPresentCheck" android:visibility="invisible"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/step_shower"
            android:text="@string/default_string"
            app:layout_constraintTop_toTopOf="@+id/step_screen"
            app:layout_constraintBottom_toBottomOf="@+id/step_screen"
            app:layout_constraintEnd_toEndOf="@+id/step_screen"
            app:layout_constraintStart_toStartOf="@+id/step_screen"
            app:layout_constraintVertical_bias="0.021"/>

</androidx.constraintlayout.widget.ConstraintLayout>