<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mobile_navigation"
            app:startDestination="@+id/navigation_home">

    <fragment
            android:id="@+id/navigation_home"
            android:name="com.example.wakeapp.ui.home.HomeFragment"
            android:label="@string/title_home"
            tools:layout="@layout/fragment_home"/>

    <fragment
            android:id="@+id/navigation_dashboard"
            android:name="com.example.wakeapp.ui.dashboard.DashboardFragment"
            android:label="@string/title_dashboard"
            tools:layout="@layout/fragment_dashboard"/>

    <fragment
            android:id="@+id/navigation_alarms"
            android:name="com.example.wakeapp.ui.alarms.AlarmsFragment"
            android:label="@string/title_alarms"
            tools:layout="@layout/fragment_alarms"/>

    <fragment
            android:id="@+id/navigation_clock"
            android:name="com.example.wakeapp.ui.clock.ClockFragment"
            android:label="@string/title_clock"
            tools:layout="@layout/fragment_clock"/>
</navigation>